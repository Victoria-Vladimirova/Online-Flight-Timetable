.flight-list
    table-layout fixed
    overflow hidden
    width 700px
    margin-top 6px
    border-collapse collapse
    text-align center
    border 1px solid #e2deee
    padding 10px

    &__edit-input,
    &__view
        width 90px

    &__body-column
        &:nth-child(2)
            word-break break-all

        &:nth-child(4),
        &:nth-child(5)
            white-space nowrap

    &__body-column,
    &__head-column
        border-collapse collapse
        text-align center
        border 1px solid #e2deee
        padding 10px
        width 95px

        &--control
            border-left 2px dotted #e2deee
            width 115px
